@page "/"
@inject IContentListLoader Loader

<div class="d-flex flex-column flex-grow-1 bd-highlight">
    <div class="bd-highlight">
        <h3>Blazorblog</h3>
        <h4>Static without Server or DB</h4>
    </div>
    @if (_loading)
    {
        <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
    }
    @foreach (var item in ContentList)
    {
        <div class="d-flex flex-grow-1" style="justify-content:center">
            <div class="card border-light" style="width:90%" @key="item">
                <div class="card-header">
                    @for (int i = 0; i < item.Tags.Length; i++)
                    {
                        @item.Tags[i]
                        if (i < item.Tags.Length - 1)
                        {
                            <span>, </span>
                        }
                    }
                </div>
                <div class="card-body">
                    <h4>@item.Title</h4>
                    @((MarkupString)item.ContentSnippet)
                    <a href=@($"/Entry/{item.Id}")>Read more...</a>
                </div>
            </div>
        </div>
    }

</div>

@code {

    private IndexEntryModel[] ContentList { get; set; } = Array.Empty<IndexEntryModel>();
    bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        ContentList = await Loader.GetContentListAsync();
        if (ContentList[0].Tags is null) ContentList[0].Tags = Array.Empty<string>();
        _loading = false;
    }
}